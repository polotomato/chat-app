<div class="chat-header">
  <div class="current-room-name">CurrentRoomName</div>
  <div class="close-room-container">
    <div class="close-room">
      <%= link_to "チャットを終了する", "#" %>
    </div>
  </div>
</div>

<div class="chat-messages">
  <ul class="message-list">
    <% 5.times do |i| %>
      <div class="message-container">
        <div class="name-and-date-container">
          <div class="message-name"><%= "#{current_user.name}#{i + 1}" %></div>
          <div class="message-date">2020/3/31(Wed) 12:34:56</div>
        </div>
        <div class="message-text">おはよう</div>
      </div>
    <% end %>
  </ul>
</div>

<div class="chat-bottom">
  <%= form_with(model: [@room, @message], local: true, class: "form-chat") do |f| %>
    <div class="input-field-container">
      <%= f.text_field :content, class: 'input-field', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <input type="file" class="hidden">
      </label>
    </div>
    <%= f.submit '送信', class: "form-submit" %>
  <% end %>
</div>